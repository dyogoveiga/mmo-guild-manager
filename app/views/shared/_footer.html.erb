<script>
  $.fn.dataTable.moment( 'DD/MM/YYYY' );
  new DataTable('#transactions', {
    SearchPanes : true,
    responsive: true,
    columnDefs: [{
        type: 'date',
        targets: [2],
        render: function (data, type, row) {
          if (type === 'sort') {
            return data.replace(/.*? /,'');
          }
          return data;
        }
      }
    ],
    order: [[ 2, 'asc' ]],
    }
  );
</script>
